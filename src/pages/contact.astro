---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Contact" description="Get in touch with Kay Livaudais">
  <section class="px-6 md:px-12 lg:px-20 py-12 md:py-16">
    <div class="max-w-3xl mx-auto">
      <h1 class="font-serif text-4xl md:text-5xl text-warm-800 mb-4">Get in Touch</h1>
      <p class="text-warm-500 text-lg mb-12">
        Interested in a painting, a commission, or just want to say hello? I'd love to hear from you.
      </p>

      <form
        action="https://formspree.io/f/YOUR_FORM_ID"
        method="POST"
        class="space-y-6"
      >
        <div class="grid sm:grid-cols-2 gap-6">
          <div>
            <label for="name" class="block text-sm text-warm-600 mb-2 tracking-wide uppercase">Name</label>
            <input
              type="text"
              id="name"
              name="name"
              required
              class="w-full px-4 py-3 bg-white border border-warm-200 rounded-sm text-warm-800 focus:outline-none focus:border-terracotta transition-colors"
            />
          </div>
          <div>
            <label for="email" class="block text-sm text-warm-600 mb-2 tracking-wide uppercase">Email</label>
            <input
              type="email"
              id="email"
              name="email"
              required
              class="w-full px-4 py-3 bg-white border border-warm-200 rounded-sm text-warm-800 focus:outline-none focus:border-terracotta transition-colors"
            />
          </div>
        </div>

        <div>
          <label for="subject" class="block text-sm text-warm-600 mb-2 tracking-wide uppercase">Subject</label>
          <input
            type="text"
            id="subject"
            name="subject"
            class="w-full px-4 py-3 bg-white border border-warm-200 rounded-sm text-warm-800 focus:outline-none focus:border-terracotta transition-colors"
          />
        </div>

        <div>
          <label for="message" class="block text-sm text-warm-600 mb-2 tracking-wide uppercase">Message</label>
          <textarea
            id="message"
            name="message"
            rows="6"
            required
            class="w-full px-4 py-3 bg-white border border-warm-200 rounded-sm text-warm-800 focus:outline-none focus:border-terracotta transition-colors resize-vertical"
          ></textarea>
        </div>

        <button
          type="submit"
          class="bg-terracotta text-cream px-8 py-3 text-sm tracking-widest uppercase hover:bg-terracotta-dark transition-colors"
        >
          Send Message
        </button>
      </form>
    </div>
  </section>
</BaseLayout>
