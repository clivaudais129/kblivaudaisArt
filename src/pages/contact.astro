---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Contact" description="Get in touch with Kay Breaux Livaudais">
  <section class="px-6 md:px-12 lg:px-20 py-12 md:py-16">
    <div class="max-w-3xl mx-auto">
      <h1 class="font-heading text-[21px] text-warm-700 mb-4 uppercase tracking-wide-3 font-normal">Get in Touch</h1>
      <p class="text-warm-400 text-[15px] leading-[28px] mb-12">
        Interested in a painting, a commission, or just want to say hello? I'd love to hear from you.
      </p>

      <form
        action="https://formspree.io/f/YOUR_FORM_ID"
        method="POST"
        class="space-y-6"
      >
        <div class="grid sm:grid-cols-2 gap-6">
          <div>
            <label for="name" class="block text-xs text-warm-500 mb-2 tracking-widest uppercase font-heading">Name</label>
            <input
              type="text"
              id="name"
              name="name"
              required
              class="w-full px-4 py-3 bg-white border border-warm-200 text-warm-800 focus:outline-none focus:border-accent transition-colors"
            />
          </div>
          <div>
            <label for="email" class="block text-xs text-warm-500 mb-2 tracking-widest uppercase font-heading">Email</label>
            <input
              type="email"
              id="email"
              name="email"
              required
              class="w-full px-4 py-3 bg-white border border-warm-200 text-warm-800 focus:outline-none focus:border-accent transition-colors"
            />
          </div>
        </div>

        <div>
          <label for="subject" class="block text-xs text-warm-500 mb-2 tracking-widest uppercase font-heading">Subject</label>
          <input
            type="text"
            id="subject"
            name="subject"
            class="w-full px-4 py-3 bg-white border border-warm-200 text-warm-800 focus:outline-none focus:border-accent transition-colors"
          />
        </div>

        <div>
          <label for="message" class="block text-xs text-warm-500 mb-2 tracking-widest uppercase font-heading">Message</label>
          <textarea
            id="message"
            name="message"
            rows="6"
            required
            class="w-full px-4 py-3 bg-white border border-warm-200 text-warm-800 focus:outline-none focus:border-accent transition-colors resize-vertical"
          ></textarea>
        </div>

        <button
          type="submit"
          class="bg-accent text-white px-10 py-3 text-xs tracking-widest uppercase hover:bg-accent-dark transition-colors font-heading font-bold"
        >
          Send Message
        </button>
      </form>
    </div>
  </section>
</BaseLayout>
