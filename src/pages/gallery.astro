---
import BaseLayout from '../layouts/BaseLayout.astro';
import { paintings } from '../data/paintings';
---

<BaseLayout title="Gallery" description="Browse abstract paintings by Kay Livaudais">
  <section class="px-6 md:px-12 lg:px-20 py-12 md:py-16">
    <div class="max-w-7xl mx-auto">
      <h1 class="font-serif text-4xl md:text-5xl text-warm-800 mb-4">Gallery</h1>
      <p class="text-warm-500 text-lg mb-12 max-w-2xl">
        A collection of abstract paintings exploring color, texture, and emotion.
      </p>

      <!-- Gallery Grid -->
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 md:gap-8">
        {paintings.map((painting, index) => (
          <div
            class="group cursor-pointer"
            data-painting={JSON.stringify(painting)}
            onclick="openLightbox(this)"
          >
            <div class="aspect-square bg-warm-200 rounded-sm overflow-hidden mb-3 flex items-center justify-center relative">
              {painting.image ? (
                <img
                  src={painting.image}
                  alt={painting.title}
                  class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
                  loading="lazy"
                />
              ) : (
                <div class="absolute inset-0 bg-warm-200 flex items-center justify-center">
                  <p class="text-warm-400 font-serif italic text-sm group-hover:text-terracotta transition-colors">
                    {painting.title}
                  </p>
                </div>
              )}
              <!-- Hover overlay -->
              <div class="absolute inset-0 bg-warm-800/0 group-hover:bg-warm-800/10 transition-colors duration-300" />
            </div>
            <h3 class="font-serif text-lg text-warm-800 group-hover:text-terracotta transition-colors">{painting.title}</h3>
            <p class="text-warm-400 text-sm mt-1">
              {painting.medium} · {painting.dimensions} · {painting.year}
            </p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Lightbox Modal -->
  <div id="lightbox" class="fixed inset-0 bg-warm-900/90 z-50 hidden items-center justify-center p-4 md:p-8" onclick="closeLightbox(event)">
    <button
      class="absolute top-6 right-6 text-cream/80 hover:text-cream text-3xl font-light"
      onclick="closeLightbox(event, true)"
      aria-label="Close"
    >
      ✕
    </button>
    <div class="max-w-4xl w-full flex flex-col items-center gap-6" onclick="event.stopPropagation()">
      <div id="lightbox-image" class="w-full aspect-[4/3] bg-warm-800 rounded-sm flex items-center justify-center">
        <p class="text-warm-500 font-serif italic">Image placeholder</p>
      </div>
      <div class="text-center">
        <h3 id="lightbox-title" class="font-serif text-2xl text-cream"></h3>
        <p id="lightbox-details" class="text-cream/60 text-sm mt-2"></p>
      </div>
    </div>
  </div>

  <script is:inline>
    function openLightbox(el) {
      const painting = JSON.parse(el.dataset.painting);
      const lightbox = document.getElementById('lightbox');
      document.getElementById('lightbox-title').textContent = painting.title;
      document.getElementById('lightbox-details').textContent =
        `${painting.medium} · ${painting.dimensions} · ${painting.year}`;

      const imageContainer = document.getElementById('lightbox-image');
      if (painting.image) {
        imageContainer.innerHTML = `<img src="${painting.image}" alt="${painting.title}" class="w-full h-full object-contain" />`;
      } else {
        imageContainer.innerHTML = `<p class="text-warm-500 font-serif italic">${painting.title}</p>`;
      }

      lightbox.classList.remove('hidden');
      lightbox.classList.add('flex');
      document.body.style.overflow = 'hidden';
    }

    function closeLightbox(event, force) {
      if (force || event.target === document.getElementById('lightbox')) {
        const lightbox = document.getElementById('lightbox');
        lightbox.classList.add('hidden');
        lightbox.classList.remove('flex');
        document.body.style.overflow = '';
      }
    }

    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape') closeLightbox(e, true);
    });
  </script>
</BaseLayout>
