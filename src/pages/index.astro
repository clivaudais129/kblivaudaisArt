---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Home">
  <!-- Full-width Hero with Featured Artwork -->
  <section class="relative w-full">
    <div class="w-full max-h-[85vh] overflow-hidden">
      <img
        src="/kblivaudaisArt/art/IMG_0189.jpg"
        alt="Featured artwork by Kay Breaux Livaudais"
        class="w-full h-auto object-contain"
      />
    </div>
  </section>

  <!-- Artist Name / Tagline -->
  <section class="py-16 md:py-24 px-6 md:px-12 lg:px-20">
    <div class="max-w-4xl mx-auto text-center">
      <h1 class="font-display text-3xl md:text-4xl lg:text-5xl text-warm-800 tracking-wide-3 uppercase font-bold mb-6">
        Kay Breaux Livaudais
      </h1>
      <p class="font-body text-warm-400 text-[15px] leading-[28px] max-w-2xl mx-auto">
        Exploring color, texture, and emotion through abstract art. Each painting is a conversation between intention and intuition.
      </p>
      <div class="mt-10">
        <a
          href="/kblivaudaisArt/gallery/"
          class="inline-block font-heading text-xs tracking-widest uppercase text-white bg-accent px-10 py-3 hover:bg-accent-dark transition-colors font-bold"
        >
          View Portfolio
        </a>
      </div>
    </div>
  </section>
</BaseLayout>
