---
import BaseLayout from '../layouts/BaseLayout.astro';
import { paintings } from '../data/paintings';

// Pick 3 featured works (spread across the collection)
const featured = [paintings[0], paintings[5], paintings[10]];
---

<BaseLayout title="Home">
  <!-- Full-width Hero with Featured Artwork -->
  <section class="relative w-full">
    <div class="w-full max-h-[85vh] overflow-hidden">
      <img
        src="/kblivaudaisArt/art/IMG_0189.jpg"
        alt="Featured artwork by Kay Breaux Livaudais"
        class="w-full h-auto object-contain"
      />
    </div>
  </section>

  <!-- Stay in Touch -->
  <section class="py-16 md:py-24 px-6 md:px-12 lg:px-20 bg-warm-200">
    <div class="max-w-3xl mx-auto text-center">
      <h2 class="font-heading text-[21px] text-warm-700 mb-8 uppercase tracking-wide-3 font-normal sm:whitespace-nowrap">
        Get early access to new work and event invitations
      </h2>
      <form class="flex flex-col sm:flex-row gap-5 items-center justify-center">
        <input
          type="text"
          name="name"
          placeholder="Name"
          class="w-full sm:w-56 px-4 py-3 border-2 border-warm-400 bg-white text-warm-700 text-sm font-body focus:outline-none focus:border-warm-600 placeholder:text-warm-500"
        />
        <input
          type="email"
          name="email"
          placeholder="Email *"
          required
          class="w-full sm:w-56 px-4 py-3 border-2 border-warm-400 bg-white text-warm-700 text-sm font-body focus:outline-none focus:border-warm-600 placeholder:text-warm-500"
        />
        <button
          type="submit"
          class="w-full sm:w-auto px-8 py-3 bg-accent text-white font-heading text-xs tracking-widest uppercase hover:bg-accent-dark transition-colors"
        >
          Stay in Touch
        </button>
      </form>
    </div>
  </section>

  <!-- Selected Works -->
  <section class="py-16 md:py-24 px-6 md:px-12 lg:px-20">
    <div class="max-w-7xl mx-auto">
      <div class="flex flex-col sm:flex-row items-center justify-around gap-16">
        {featured.map((painting) => (
          <div class="aspect-square bg-warm-100 overflow-hidden w-[280px] sm:w-[250px] md:w-[300px] lg:w-[350px] shrink-0">
            <img
              src={painting.thumb || painting.image}
              alt="Artwork by Kay Breaux Livaudais"
              class="w-full h-full object-cover"
              loading="lazy"
            />
          </div>
        ))}
      </div>
      <div class="mt-12 text-center">
        <a
          href="/kblivaudaisArt/gallery/"
          class="inline-block font-heading text-xs tracking-widest uppercase text-white bg-sky-400 px-10 py-3 hover:bg-sky-500 transition-colors font-bold"
        >
          View Portfolio
        </a>
      </div>
    </div>
  </section>
</BaseLayout>
