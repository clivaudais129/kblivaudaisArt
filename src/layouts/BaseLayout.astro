---
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
}

const { title, description = 'Abstract paintings by Kay Breaux Livaudais' } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700&family=Raleway:wght@300;400;500;600&family=Lato:wght@300;400;700&display=swap"
      rel="stylesheet"
    />
    <title>{title} | Kay Breaux Livaudais</title>
  </head>
  <body class="bg-cream text-warm-800 font-body min-h-screen flex flex-col">
    <!-- Navigation -->
    <nav class="w-full py-8 px-6 md:px-12 lg:px-20">
      <div class="max-w-7xl mx-auto flex items-center justify-between">
        <a href="/kblivaudaisArt/" class="font-display text-[clamp(0.9rem,4.5vw,1.875rem)] md:text-3xl text-warm-800 tracking-wide-3 uppercase hover:text-accent transition-colors whitespace-nowrap">
          Kay Breaux Livaudais
        </a>
        <!-- Mobile menu button -->
        <button id="menu-toggle" class="md:hidden p-2" aria-label="Toggle menu">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
        <!-- Desktop nav -->
        <div class="hidden md:flex items-center gap-10">
          <a href="/kblivaudaisArt/" class="font-nav text-[15px] font-semibold tracking-widest uppercase text-warm-700 hover:text-accent transition-colors">Home</a>
          <a href="/kblivaudaisArt/gallery/" class="font-nav text-[15px] font-semibold tracking-widest uppercase text-warm-700 hover:text-accent transition-colors">Portfolio</a>
          <a href="/kblivaudaisArt/about/" class="font-nav text-[15px] font-semibold tracking-widest uppercase text-warm-700 hover:text-accent transition-colors">About</a>
          <a href="/kblivaudaisArt/contact/" class="font-nav text-[15px] font-semibold tracking-widest uppercase text-warm-700 hover:text-accent transition-colors">Contact</a>
        </div>
      </div>
      <!-- Mobile nav -->
      <div id="mobile-menu" class="hidden md:hidden mt-4 pb-4 border-b border-warm-200">
        <div class="flex flex-col gap-4">
          <a href="/kblivaudaisArt/" class="font-nav text-[15px] font-semibold tracking-widest uppercase text-warm-700 hover:text-accent transition-colors">Home</a>
          <a href="/kblivaudaisArt/gallery/" class="font-nav text-[15px] font-semibold tracking-widest uppercase text-warm-700 hover:text-accent transition-colors">Portfolio</a>
          <a href="/kblivaudaisArt/about/" class="font-nav text-[15px] font-semibold tracking-widest uppercase text-warm-700 hover:text-accent transition-colors">About</a>
          <a href="/kblivaudaisArt/contact/" class="font-nav text-[15px] font-semibold tracking-widest uppercase text-warm-700 hover:text-accent transition-colors">Contact</a>
        </div>
      </div>
    </nav>

    <!-- Main content -->
    <main class="flex-1">
      <slot />
    </main>

    <!-- Footer -->
    <footer class="py-10 px-6 md:px-12 lg:px-20 border-t border-warm-200">
      <div class="max-w-7xl mx-auto text-center">
        <p class="text-warm-400 text-xs tracking-widest uppercase">
          Copyright &copy; {new Date().getFullYear()} Kay Breaux Livaudais. All rights reserved.
        </p>
      </div>
    </footer>

    <script>
      const toggle = document.getElementById('menu-toggle');
      const menu = document.getElementById('mobile-menu');
      toggle?.addEventListener('click', () => {
        menu?.classList.toggle('hidden');
      });
    </script>
  </body>
</html>
